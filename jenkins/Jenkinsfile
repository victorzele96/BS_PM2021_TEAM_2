pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.8'
                }
            }
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {

                    sh 'python -m pip install -r requirements.txt'
                    sh 'python -m py_compile manage.py'

                }
            }
        }
        stage('Migrate') {
            agent {
                docker {
                    image 'python:3.8'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'python manage.py makemigrations'
                    sh 'python manage.py migrate'
                }
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'python:3.8'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'python manage.py test'
                }
            }
        }

        stage('Coverage') {
            agent {
                docker {
                    image 'python:3.8'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'pip install coverage'
                    sh 'python -m coverage manage.py test'
                }
            }
        }
    }
}