pipeline {
    agent {
        docker {
            image 'python:3.8'
            }
        }
    stages {
        stage('Build') {

            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {

                    sh 'python -m pip install -r requirements.txt'
                    sh 'python -m py_compile manage.py'

                }
            }
        }
        stage('Test') {
            steps{
                sh 'python -m py_compile manage.py test'
            }
        }
    }
}